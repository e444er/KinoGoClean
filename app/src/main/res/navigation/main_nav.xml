<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.e444er.cleanmovie.presentation.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.e444er.cleanmovie.presentation.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailBottomSheetFragment"
            app:destination="@id/detailBottomSheetFragment" />
    </fragment>
    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.e444er.cleanmovie.presentation.explore.ExploreFragment"
        android:label="fragment_explore"
        tools:layout="@layout/fragment_explore">
        <action
            android:id="@+id/action_exploreFragment_to_filterBottomSheetFragment"
            app:destination="@id/filterBottomSheetFragment" />
    </fragment>
    <fragment
        android:id="@+id/myListFragment"
        android:name="com.e444er.cleanmovie.presentation.mylist.MyListFragment"
        android:label="fragment_my_list"
        tools:layout="@layout/fragment_my_list" />
    <dialog
        android:id="@+id/filterBottomSheetFragment"
        android:name="com.e444er.cleanmovie.presentation.filter_bottom_sheet.FilterBottomSheetFragment"
        android:label="fragment_filter_bottom_sheet"
        tools:layout="@layout/fragment_filter_bottom_sheet" />

    <dialog
        android:id="@+id/detailBottomSheetFragment"
        android:name="com.e444er.cleanmovie.presentation.detail_bottom_sheet.DetailBottomSheetFragment"
        android:label="DetailBottomSheetFragment"
        tools:layout="@layout/fragment_detail_bottom_sheet">
        <argument
            android:name="Movie"
            android:defaultValue="@null"
            app:argType="com.e444er.cleanmovie.domain.models.Movie"
            app:nullable="true" />
        <argument
            android:name="TvSeries"
            android:defaultValue="@null"
            app:argType="com.e444er.cleanmovie.domain.models.TvSeries"
            app:nullable="true" />
        <action
            android:id="@+id/action_detailBottomSheetFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_in_right" />
    </dialog>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.e444er.cleanmovie.presentation.setting.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.e444er.cleanmovie.presentation.detail_fragment.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="movieId"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="tvId"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
</navigation>